## MSMTPRC Config for Mail Server ##

host mailcatcher
port 1025

tls off
tls_starttls off
# tls_trust_file /etc/ssl/certs/ca-certificates.crt

# Construct envelope-from addresses of the form "user@oursite.example"
auto_from on
maildomain localhost

auto_from on
maildomain localhost
logfile /var/log/msmtp.log


